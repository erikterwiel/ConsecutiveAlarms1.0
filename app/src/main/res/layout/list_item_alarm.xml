<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <TextView
        android:id="@+id/list_item_from_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="12:15"/>

    <TextView
        android:id="@+id/list_item_to_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_item_to_time"
        android:layout_alignBottom="@+id/list_item_to_time"
        android:layout_toEndOf="@+id/list_item_to_time"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="AM"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_trending_flat_black54_48dp"
        android:adjustViewBounds="true"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/list_item_from_am"
        android:layout_toEndOf="@+id/list_item_from_am"
        android:id="@+id/imageView"/>
    <TextView
        android:id="@+id/list_item_to_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:text="12:30"
        android:layout_alignBaseline="@+id/list_item_from_am"
        android:layout_alignBottom="@+id/list_item_from_am"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:id="@+id/list_item_from_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_item_from_time"
        android:layout_alignBottom="@+id/list_item_from_time"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/list_item_from_time"
        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="AM"/>
    <TextView
        android:id="@+id/list_item_alarm_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="3 Alarms"
        android:layout_below="@+id/list_item_from_time"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/list_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:text="Mon, Tue, Wed, Thu, Fri"
        android:layout_alignBaseline="@+id/list_item_alarm_count"
        android:layout_alignBottom="@+id/list_item_alarm_count"
        android:layout_toEndOf="@+id/list_item_alarm_count"/>
    <Switch
        android:id="@+id/list_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@+id/list_item_to_am"
        android:layout_alignParentEnd="true"/>
    <ImageButton
        android:id="@+id/list_item_settings"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_settings_white_48dp"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@+id/list_item_alarm_count"
        android:layout_alignParentEnd="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/list_item_alarm_count"
        android:background="#26FFFFFF"
        android:id="@+id/view"/>
</RelativeLayout>